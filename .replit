entrypoint = "index.html"
modules = ["web", "python-3.11", "nodejs-20", "postgresql-16"]

[nix]
channel = "stable-24_11"
packages = ["static-web-server"]

[deployment]
publicDir = "/"
deploymentTarget = "vm"
run = ["python", "server.py"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Website"

[[workflows.workflow]]
name = "Start Website"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python server.py"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 5000

[agent]
expertMode = true
integrations = ["resend:1.0.0", "python_openai_ai_integrations:1.0.0"]
